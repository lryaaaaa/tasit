.page{
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.page__hd{
  height: 88rpx;
  /* background-color:green; */

}
.page__bd{
  flex: 1;
  /* background-color: yellow; */
}
.page__bd swiper{
  height: 100%;
}
.rx_goods{
  display: flex;
  height: 100%;
}
.menu_wrapper, .foods_wrapper{
   height: 100%;
}
.foods_wrapper{
  flex: 1;
  /* background-color: yellow; */
}
.menu_wrapper{
  width: 200rpx;
  /* background-color: green; */
}
.menu-wrapper  scroll-view{
  height: 100%;
}
.menu-item{
  position: relative;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.menu-item.active{
  color: #f01414;
}
.menu-item::after{
  content:"";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: rgba(0,0,0,0.1);
}
